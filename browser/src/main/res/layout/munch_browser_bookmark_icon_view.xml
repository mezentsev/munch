<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/munch_bookmark_item_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/munch_bookmark_item"
        android:layout_width="@dimen/munch_bookmark_item_height"
        android:layout_height="@dimen/munch_bookmark_item_height"
        android:gravity="center"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/munch_bookmark_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="G"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/munch_bookmark_description"
        android:layout_width="@dimen/munch_bookmark_item_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="test" />

</LinearLayout>